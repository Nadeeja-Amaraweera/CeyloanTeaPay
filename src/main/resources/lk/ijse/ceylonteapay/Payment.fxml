<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="450" prefWidth="600" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lk.ijse.ceylonteapay.controller.PaymentController">

   <Label layoutX="200" layoutY="20" style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Monthly Salary Payment" />

   <Label layoutX="50" layoutY="80" text="Employee" />
   <ComboBox fx:id="cmbEmployee" layoutX="200" layoutY="75" prefWidth="300" />

   <Label layoutX="50" layoutY="130" text="Month" />

   <Button layoutX="200" layoutY="180" onAction="#calculateSalary" text="Calculate Salary" />

   <Label layoutX="50" layoutY="240" text="Tea Salary" />
   <TextField fx:id="txtTeaSalary" editable="false" layoutX="200" layoutY="235" />

   <Label layoutX="50" layoutY="290" text="Other Work Salary" />
   <TextField fx:id="txtOtherSalary" editable="false" layoutX="200" layoutY="285" />

   <Label layoutX="50" layoutY="340" text="Final Salary" />
   <TextField fx:id="txtFinalSalary" editable="false" layoutX="200" layoutY="335" />

   <Button layoutX="200" layoutY="380" onAction="#savePayment" text="Save Payment" />
   <Button layoutX="456.0" layoutY="180.0" mnemonicParsing="false" onAction="#openTeaRateWindow" prefHeight="26.0" prefWidth="104.0" text="Tea Rate" />
   <ComboBox fx:id="monthCombo" layoutX="200.0" layoutY="126.0" prefWidth="150.0" />

</AnchorPane>
