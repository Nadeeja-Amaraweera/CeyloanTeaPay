<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<?import java.net.URL?>
<AnchorPane
        prefHeight="800.0"
        prefWidth="1500.0"
        xmlns="http://javafx.com/javafx/25"
        xmlns:fx="http://javafx.com/fxml/1"
        fx:controller="lk.ijse.ceylonteapay.controller.LayoutController">

    <!-- Attach CSS -->
    <stylesheets>
        <URL value="@layout.css"/>
    </stylesheets>

    <children>
        <BorderPane prefHeight="800.0" prefWidth="1500.0">

            <!-- LEFT SIDEBAR -->
            <left>
                <VBox
                        alignment="TOP_CENTER"
                        prefHeight="800.0"
                        prefWidth="250.0"
                        styleClass="sidebar">

                    <children>
                        <!-- LOGO -->
                        <ImageView
                                fitHeight="380.0"
                                fitWidth="240.0"
                                preserveRatio="true">
                            <VBox.margin>
                                <Insets bottom="30"/>
                            </VBox.margin>
                            <image>
                                <Image url="@images/Gemini_Generated_Image_7z2ek87z2ek87z2e.png"/>
                            </image>
                        </ImageView>

                        <!-- BUTTONS -->
                        <Button text="Tea Plucking"
                                prefHeight="40"
                                prefWidth="150"
                                onAction="#clickTeaPlucking"
                                styleClass="sidebar-button"/>

                        <Button text="Other Works"
                                prefHeight="40"
                                prefWidth="150"
                                onAction="#clickOtherWork"
                                styleClass="sidebar-button"/>

                        <Button text="Stock Manage"
                                prefHeight="40"
                                prefWidth="150"
                                onAction="#clickStock"
                                styleClass="sidebar-button"/>

                        <Button text="Employee Manage"
                                prefHeight="40"
                                prefWidth="150"
                                onAction="#clickEmployee"
                                styleClass="sidebar-button"/>

                        <Button text="Areas Manage"
                                prefHeight="40"
                                prefWidth="150"
                                onAction="#clickAreas"
                                styleClass="sidebar-button"/>

                        <Button text="Factory Manage"
                                prefHeight="40"
                                prefWidth="150"
                                onAction="#clickFactories"
                                styleClass="sidebar-button"/>

                        <Button text="Tea Delivery"
                                prefHeight="40"
                                prefWidth="150"
                                onAction="#clickDelivery"
                                styleClass="sidebar-button"/>
                    </children>
                </VBox>
            </left>

            <!-- MAIN CONTENT -->
            <center>
                <AnchorPane
                        fx:id="mainContent"
                        prefHeight="800.0"
                        prefWidth="1250.0"
                        styleClass="main-content">

                    <children>
                        <ImageView
                                fitHeight="520.0"
                                fitWidth="720.0"
                                layoutX="265.0"
                                layoutY="140.0"
                                preserveRatio="true">
                            <image>
                                <Image url="@images/welcome.png"/>
                            </image>
                        </ImageView>
                    </children>
                </AnchorPane>
            </center>

        </BorderPane>
    </children>
</AnchorPane>
